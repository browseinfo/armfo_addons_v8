        <record model="ir.ui.view" id="view_email_server_add_follower_form_extended">
            <field name="name">server.add.folower.form.extended</field>
            <field name="model">mail.wizard.invite</field>
            <field name="inherit_id" ref="mail.mail_wizard_invite_form" />
